

<div class="tags">
  <div class="container">
    <div class="cards row">
      <% @tags.each do |tag| %>
      <div class="card col-xs-4">
        <img src="<%= tag.image %>" alt="" />
        <h2><%= tag.title %></h2>
        <%= link_to "Learn more", tag_path(tag) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
