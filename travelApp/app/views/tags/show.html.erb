<div class="tag">
  <div class="container">
    <h2 class="tag-title"><%= @tag.title %></h2>


    <div class="cards row">

      <% @destinations.each do |destination| %>
      <div class="card col-xs-4">
        <img src="<%= destination.image %>"/>
        <h2><%= destination.name %></h2>
        <p> <%= destination.description %> </p>
        <%= link_to 'see', destination_path(destination) %>

      </div>
      <% end %>

    </div>
    <div class="card row">
      <div class="col-xs-12">
        <%= link_to 'back', :back %>

      </div>
    </div>
  </div>
</div>
